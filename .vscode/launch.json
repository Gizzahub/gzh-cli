{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug GZH CLI",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "args": ["--help"],
            "env": {
                "GZH_DEV_MODE": "true",
                "GO111MODULE": "on"
            },
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Debug GZH Bulk Clone",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "bulk-clone",
                "--config",
                "samples/bulk-clone-simple.yaml",
                "--dry-run"
            ],
            "env": {
                "GZH_DEV_MODE": "true",
                "GO111MODULE": "on"
            },
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Debug GZH Config Validate",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "bulk-clone",
                "validate",
                "--config",
                "samples/bulk-clone-example.yaml"
            ],
            "env": {
                "GZH_DEV_MODE": "true",
                "GO111MODULE": "on"
            },
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Debug GZH Monitoring",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "monitoring",
                "start",
                "--port",
                "8080"
            ],
            "env": {
                "GZH_DEV_MODE": "true",
                "GO111MODULE": "on"
            },
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Debug GZH Web Dashboard",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "serve",
                "--port",
                "8080",
                "--static-dir",
                "web/build"
            ],
            "env": {
                "GZH_DEV_MODE": "true",
                "GO111MODULE": "on"
            },
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Debug Current Go File",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}",
            "env": {
                "GO111MODULE": "on"
            },
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Debug Go Test (Current Package)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "env": {
                "GO111MODULE": "on"
            },
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Debug Go Test (Current File)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "args": [
                "-test.run",
                "${input:testName}"
            ],
            "env": {
                "GO111MODULE": "on"
            },
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Attach to Running Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": "${command:pickProcess}",
            "showLog": true
        }
    ],
    "inputs": [
        {
            "id": "testName",
            "description": "Test function name",
            "default": "TestMain",
            "type": "promptString"
        }
    ]
}