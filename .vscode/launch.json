{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug GZH CLI",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "args": ["--help"],
      "env": {
        "GZH_DEV_MODE": "true",
        "GO111MODULE": "on"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "showLog": true
    },
    {
      "name": "Debug GZH Bulk Clone",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "args": [
        "bulk-clone",
        "--config",
        "examples/bulk-clone/bulk-clone-simple.yaml",
        "--dry-run"
      ],
      "env": {
        "GZH_DEV_MODE": "true",
        "GO111MODULE": "on"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "showLog": true
    },
    {
      "name": "Debug GZH Config Validate",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "args": [
        "bulk-clone",
        "validate",
        "--config",
        "examples/bulk-clone/bulk-clone-example.yaml"
      ],
      "env": {
        "GZH_DEV_MODE": "true",
        "GO111MODULE": "on"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "showLog": true
    },
    {
      "name": "Debug GZH Monitoring",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "args": ["monitoring", "start", "--port", "8080"],
      "env": {
        "GZH_DEV_MODE": "true",
        "GO111MODULE": "on"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "showLog": true
    },
    {
      "name": "Debug GZH Web Dashboard",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "args": ["serve", "--port", "8080", "--static-dir", "web/build"],
      "env": {
        "GZH_DEV_MODE": "true",
        "GO111MODULE": "on"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "showLog": true
    },
    {
      "name": "Debug Current Go File",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${file}",
      "env": {
        "GO111MODULE": "on"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "showLog": true
    },
    {
      "name": "Debug Go Test (Current Package)",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}",
      "env": {
        "GO111MODULE": "on"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "showLog": true
    },
    {
      "name": "Debug Go Test (Current File)",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}",
      "args": ["-test.run", "${input:testName}"],
      "env": {
        "GO111MODULE": "on"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "showLog": true
    },
    {
      "name": "Attach to Running Process",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": "${command:pickProcess}",
      "showLog": true
    },
    {
      "name": "Debug GZH IDE Command",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "args": ["ide", "monitor", "--interval", "5s"],
      "env": {
        "GZH_DEV_MODE": "true",
        "GO111MODULE": "on"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "showLog": true
    },
    {
      "name": "Debug GZH Network Environment",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "args": ["net-env", "monitor", "--verbose"],
      "env": {
        "GZH_DEV_MODE": "true",
        "GO111MODULE": "on"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "showLog": true
    },
    {
      "name": "Debug GZH Performance Analysis",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "args": ["performance", "analyze", "--profile"],
      "env": {
        "GZH_DEV_MODE": "true",
        "GO111MODULE": "on"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "showLog": true
    },
    {
      "name": "Remote Debug (attach)",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "/workspace",
      "port": 2345,
      "host": "127.0.0.1",
      "showLog": true
    }
  ],
  "inputs": [
    {
      "id": "testName",
      "description": "Test function name",
      "default": "TestMain",
      "type": "promptString"
    }
  ]
}
